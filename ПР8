#include <stdio.h>
#include <string.h>

int факторіал(int n) {
    int результат = 1;
    for (int i = 1; i <= n; i++) {
        результат *= i;
    }
    return результат;
}

int кількість_анаграм(char *слово) {
    int довжина = strlen(слово);
    int кількість_анаграм = факторіал(довжина);
    return кількість_анаграм;
}

int main() {
    char слово[15];
    printf("Введіть слово: ");
    scanf("%s", слово);
    int кількість = кількість_анаграм(слово);
    printf("Кількість можливих анаграм: %d\n", кількість);
    return 0;
}
