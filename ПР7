#include <stdio.h>
#include <math.h>

int визначити_кількість_точок_перетину(int х1, int у1, int r1, int х2, int у2, int r2) {
    // Відстань між центрами колів
    double відстань = sqrt(pow(х2 - х1, 2) + pow(у2 - у1, 2));
    
    // Перевірка умов перетину колів
    if (відстань == 0 && r1 == r2) {
        // Кола збігаються, маємо безліч точок перетину
        return -1;
    } else if (відстань > r1 + r2) {
        // Кола не перетинаються, відстань між ними більша за суму радіусів
        return 0;
    } else if (відстань == r1 + r2) {
        // Кола торкаються зовнішньо, маємо одну точку перетину
        return 1;
    } else if (відстань < r1 + r2) {
        // Кола перетинаються
        if (відстань + r1 == r2 || відстань + r2 == r1) {
            // Кола торкаються внутрішньо, маємо одну точку перетину
            return 1;
        } else if (відстань + r1 < r2 || відстань + r2 < r1) {
            // Одне коло повністю міститься всередині іншого, немає точок перетину
            return 0;
        } else {
            // Кола перетинаються в двох точках
            return 2;
        }
    }
}

int main() {
    int х1, у1, r1, х2, у2, r2;
    printf("Введіть координати центру першого кола (х1, у1): ");
    scanf("%d %d", &х1, &у1);
    printf("Введіть радіус першого кола (r1): ");
    scanf("%d", &r1);
    printf("Введіть координати центру другого кола (х2, у2): ");
    scanf("%d %d", &х2, &у2);
    printf("Введіть радіус другого кола (r2): ");
    scanf("%d", &r2);

    int кількість_точок_перетину = визначити_кількість_точок_перетину(х1, у1, r1, х2, у2, r2);
    printf("Кількість точок перетину: %d\n", кількість_точок_перетину);

    return 0;
}
